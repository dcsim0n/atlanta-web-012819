<% if @post.errors.count > 0 %>
  <h2>Errors</h2>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li style="color: red"><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@post) do |f| %>
    <%= f.text_field :title %>
    <%= f.text_field :tag_names %>
    <%= f.date_select :published_at %>
    <%= f.text_area :content%>
    <%= f.submit %>
<% end %>
